        bss
        org 0
lastpat ds  128
pattern ds  1        
        code        
        org $1000
        jmp start
back    lda #$30
        sta $bfd2
        jsr ldelay
        lda #$30
        sta $bfd2
        ldx #50
        jsr delay1
        lda #$30
        sta $bfd2
