l1end1  cpy #80
        bne loop1
        beq loop3
                
        
delay   ldx #25     ;~50µs delay
delay1  dex
        bne delay1
        rts  
        
ldelay  ldx #10     ;~5ms delay
ldelay1 ldy #250    ;~500µs delay inner loop
ldelay2 dey
